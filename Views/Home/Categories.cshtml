<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Categories Page</title>
    </head>

    <body>
        @model AddCategoryViewModel
        <h1>Route Worked</h1>
        <h1><a href="/">Products</a> | Categories</h1>
        <div class="formbox">
            <form asp-action="addCategory" asp-controller="Home" method="POST">
                <span asp-validation-for="newCategory.Name"></span>
                <label asp-for="newCategory.Name">Name: </label>
                <input type="text" asp-for="newCategory.Name">
                <br>
                <input type="submit" value="Add Category">
            </form>
        </div>

        <div class="existing">
            <h2>Existing Categories</h2>
            @{
                <ul>
                    @foreach(Category cat in Model.Categories)
                    {
                        <li><a href="category/@cat.CategoryId">@cat.Name</a></li>
                    }
                </ul>
            }
        </div>
    </body>
</html>